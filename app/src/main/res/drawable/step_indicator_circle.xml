<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape
            android:shape="oval">
            <solid android:color="@color/completed_color" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape
            android:shape="oval">
            <solid android:color="@color/current_color" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/incomplete_color" />
        </shape>
    </item>

</selector>
