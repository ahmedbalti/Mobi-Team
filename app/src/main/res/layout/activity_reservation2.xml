<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".ReservationActivity2">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:fontFamily="cursive"
        android:layout_gravity="center_horizontal"
        android:text="Détails Réservation"
        android:textColor="#390FC5"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Voiture:Opel Astra"
        android:textSize="20dp"


        />



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        app:srcCompat="@drawable/image2" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Lieu Prise:Tunis"
        android:textSize="20dp"

        />



    <TextView
        android:id="@+id/textView21"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Lieu Remise:Bardo"
        android:textSize="20dp"

        />



    <TextView
        android:id="@+id/textView10"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Modèle:Citadine"
        android:textSize="20dp"

        />



    <TextView
        android:id="@+id/textView13"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Chevaux:5 ch"
        android:textSize="20dp"

        />



    <TextView
        android:id="@+id/textView9"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Date Prise:20/05/2023"
        android:textSize="20dp"

        />



    <TextView
        android:id="@+id/textView16"
        android:layout_width="109dp"
        android:layout_height="28dp"
        android:text="Date Remise:25/05/2023"
        android:textSize="20dp"

        />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passer au paiment"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"

        />

</LinearLayout>
