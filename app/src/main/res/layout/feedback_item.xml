<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/feedback"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:contentDescription="Icon"/>

        <!-- Title and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fb_icon"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fb_contenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fb_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 2023-10-05"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/fb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_gravity="center"
                android:textColor="#FFC107"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/fb_icon_close"
                android:clickable="true"
                android:layout_gravity="center"
                android:contentDescription="Close Icon"/>

                <ImageView
                    android:id="@+id/item_update"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/edit_note_24"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:contentDescription="Close Icon"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>